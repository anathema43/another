{
  "name": "darjeeling-souls",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx,ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:all": "npm run test && npm run cy:run",
    "test:quick": "npm run test && npm run cy:run:critical",
    "test:firebase": "npm run test src/test/firebase/",
    "test:stores": "npm run test src/store/__tests__/",
    "test:components": "npm run test src/components/__tests__/",
    "test:services": "npm run test src/services/__tests__/",
    "test:utils": "npm run test src/utils/__tests__/",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:run:critical": "cypress run --spec \"cypress/e2e/01-authentication.cy.js,cypress/e2e/02-product-browsing.cy.js,cypress/e2e/03-checkout.cy.js\"",
    "cy:run:persistence": "cypress run --spec \"cypress/e2e/cart-persistence.cy.js,cypress/e2e/wishlist-persistence.cy.js,cypress/e2e/authentication-routing.cy.js\"",
    "cy:run:all": "cypress run --spec \"cypress/e2e/*.cy.js\"",
    "cy:run:auth": "cypress run --spec \"cypress/e2e/01-authentication.cy.js\"",
    "cy:run:shop": "cypress run --spec \"cypress/e2e/02-product-browsing.cy.js\"",
    "cy:run:cart": "cypress run --spec \"cypress/e2e/03-shopping-cart.cy.js\"",
    "cy:run:checkout": "cypress run --spec \"cypress/e2e/04-checkout-process.cy.js\"",
    "cy:run:admin": "cypress run --spec \"cypress/e2e/05-admin-functionality.cy.js\"",
    "cy:run:security": "cypress run --spec \"cypress/e2e/13-security-testing.cy.js\"",
    "cy:run:search": "cypress run --spec \"cypress/e2e/18-algolia-search.cy.js\"",
    "cy:run:cultural": "cypress run --spec \"cypress/e2e/17-artisan-cultural-content.cy.js\"",
    "cy:run:realtime": "cypress run --spec \"cypress/e2e/12-real-time-features.cy.js\"",
    "test:persistence": "vitest run src/components/__tests__/CartPersistence.test.jsx src/components/__tests__/WishlistFunctionality.test.jsx src/components/__tests__/AuthenticationRouting.test.jsx",
    "update-logo": "node scripts/update-logo.js"
  },
  "dependencies": {
    "@heroicons/react": "^2.1.4",
    "algoliasearch": "^4.24.0",
    "firebase": "^10.12.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.52.1",
    "react-router-dom": "^6.24.1",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.6.0",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "cypress": "^13.13.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.3",
    "firebase-tools": "^13.11.4",
    "jsdom": "^24.1.0",
    "postcss": "^8.4.39",
    "sharp": "^0.33.4",
    "tailwindcss": "^3.4.4",
    "vite": "^5.3.1",
    "vite-plugin-svgr": "^4.2.0",
    "vitest": "^1.6.0"
  }
}
